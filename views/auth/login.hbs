<div class="auth">
<div class="row">
    <div class="col s6">
        <ul class="tabs">
            <li class="tab col s6"><a class="active" href="#login">Увійти в CRM</a></li>
<!--            <li class="tab col s6"><a  href="#register">Зареєструватися</a></li>-->
        </ul>
    </div>
    <div id="login" class="col s6 offset-s3">
        <h4>Вхід в CRM</h4>
        <form action="/auth/login" method="POST">
            {{#if error}}
                <p class="alert">{{error}}</p>
            {{/if}}
            <div class="input-field">
                <input id="email" name="email" type="email" class="validate" required>
                <label for="email">Email</label>
                <span class="helper-text" data-error="Введіть Email"></span>
            </div>
            <div class="input-field">
                <input id="password" name="password" type="password" class="validate" required min="1">
                <label for="password">Пароль</label>
                <span class="helper-text" data-error="Введіть пароль"></span>
            </div>
            <input type="hidden" name="_csrf" value="{{csrf}}">
            <button class="btn btn-primary" type="submit">Увійти</button>
        </form>
    </div>
